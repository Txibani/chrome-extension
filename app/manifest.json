{
  "manifest_version": 2,
  "name": "My Cool Extension",
  "version": "0.1",
  "icons": {
    "icon": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": ["popup.css"],
      "js": ["jquery-2.2.1.min.js", "content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [ "tabs" ]
}